# Database
DATABASE_URL="postgresql://user:pass@localhost:5432/propertypulse"

# Feature Flags (Enable for production)
APPLICATIONS_E2E=false
STRIPE_CORE=false
S3_UPLOADS=false
REMINDERS=false
AI_LEASING=false
AI_RENT_OPTIMIZER=false
AI_TURNOVER_PREDICTOR=false
AI_FORECASTING=false
AI_DOCUMENT_SEARCH=false
AI_DOCUMENT_CHAT=false

# Email (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=noreply@yourdomain.com

# Stripe (Payments)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# S3 / Object Storage (Uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
S3_BUCKET=your-bucket-name
S3_REGION=us-east-1
S3_ENDPOINT=https://your-s3-endpoint.com

# AI Services
OPENAI_API_KEY=sk-your-openai-api-key-here

# Authentication
JWT_SECRET=your_jwt_secret_here_minimum_32_chars
FIREBASE_PRIVATE_KEY_ID=your_firebase_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_key_here\n-----END PRIVATE KEY-----"
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your_client_id

# Server
NODE_ENV=development
PORT=5000

# Logging & Monitoring (Optional)
LOG_LEVEL=info
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Security & Rate Limiting
RATE_LIMIT_AUTH=10
RATE_LIMIT_GENERAL=200
SECURITY_CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Backup (Optional)
S3_BACKUP_BUCKET=your-backup-bucket