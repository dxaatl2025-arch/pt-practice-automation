{
  "name": "propertypulse-backend",
  "version": "1.0.0",
  "description": "PropertyPulse Backend API Server",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest tests/integration --testTimeout=10000",
    "test:unit": "jest tests/unit",
    "test:repositories": "jest tests/repositories",
    "test:mongo": "DB_TARGET=mongo jest tests/integration",
    "test:prisma": "DB_TARGET=prisma jest tests/integration",
    "test:setup": "npm run test:db:reset && npm run test:db:migrate",
    "test:db:reset": "DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/propertypulse_test npx prisma migrate reset --force --skip-generate",
    "test:db:migrate": "DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/propertypulse_test npx prisma migrate deploy",
    "test:db:studio": "DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/propertypulse_test npx prisma studio",
    "migrate:users": "ts-node scripts/migrateUsers.ts",
    "migrate:properties": "ts-node scripts/migrateProperties.ts",
    "migrate:leases": "ts-node scripts/migrateLeases.ts",
    "migrate:payments": "ts-node scripts/migratePayments.ts",
    "migrate:tickets": "ts-node scripts/migrateTickets.ts",
    "migrate:all": "npm run migrate:users && npm run migrate:properties && npm run migrate:leases && npm run migrate:payments && npm run migrate:tickets",
    "migrate:verify": "ts-node scripts/verifyMigration.ts",
    "migrate:clean": "rm -rf scripts/reports scripts/*.json",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:studio": "npx prisma studio",
    "prisma:reset": "npx prisma migrate reset",
    "verify:final": "node scripts/verify-final-migration.js",
    "cutover:health": "node scripts/monitor-cutover.js health",
    "cutover:monitor": "node scripts/monitor-cutover.js monitor",
    "cutover:switch-prisma": "node scripts/monitor-cutover.js switch-prisma",
    "cutover:switch-mongo": "node scripts/monitor-cutover.js switch-mongo",
    "cutover:rollback": "node scripts/monitor-cutover.js switch-mongo",
    "production:cutover": "npm run verify:final"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/db/**",
      "!src/models/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "keywords": [
    "express",
    "mongodb",
    "firebase",
    "property-management",
    "api"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.3",
    "express-validator": "^7.0.1",
    "firebase-admin": "^13.4.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.18.0",
    "mongoose": "^7.8.7",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.7",
    "openai": "^5.12.2",
    "pdfkit": "^0.17.1",
    "pg": "^8.16.3",
    "plaid": "^37.0.0",
    "stripe": "^18.4.0"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "cross-env": "^10.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prisma": "^6.13.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}