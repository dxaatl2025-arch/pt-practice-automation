{
  "name": "propertypulse",
  "version": "1.0.0",
  "description": "AI-powered property management SaaS platform connecting landlords and tenants",
  "main": "server/server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "install-server": "cd server && npm install",
    "install-all": "npm run install-server && npm run install-client",
    "start": "cd server && npm start",
    "test:smoke": "jest tests/e2e/smoke-tests.js --testTimeout=15000",
    "test:comprehensive": "cd server && npm run test:comprehensive",
    "test:e2e": "playwright test",
    "seed:test": "cd server && npm run seed:test",
    "test:api": "cd server && npm run test:api",
    "db:seed": "cd server && npm run db:seed",
    "backup": "scripts\\backup-database.bat",
    "health": "scripts\\health-check.bat",
    "setup:complete": "npm run health && npm run test:smoke"
  },
  "keywords": [
    "property-management",
    "saas",
    "react",
    "nodejs",
    "mongodb",
    "firebase"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/node": "^24.3.1",
    "concurrently": "^8.2.2",
    "cross-env": "^10.0.0",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "nodemailer": "^7.0.5",
    "pdfkit": "^0.17.1",
    "pg": "^8.16.3",
    "react-hot-toast": "^2.5.2",
    "react-router-dom": "^7.7.1"
  }
}
